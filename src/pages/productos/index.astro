import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

// Obtener todos los productos
const products = await getCollection("products");

// Organizar productos por categor√≠a
const productsByCategory: Record<string, CollectionEntry<"products">[]> = products.reduce((acc, product) => {
    const category = product.data.category || 'Sin categor√≠a';
    if (!acc[category]) {
        acc[category] = [];
    }
    acc[category].push(product);
    return acc;
}, {} as Record<string, CollectionEntry<"products">[]>);

// Ordenar categor√≠as
const categories = Object.keys(productsByCategory).sort();

// Debug - para ver qu√© est√° pasando
